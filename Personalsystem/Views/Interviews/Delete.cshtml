@model Personalsystem.Models.Interview

@{
    ViewBag.Title = "Ta bort";
}

<h2>Avboka</h2>

<h3>Är du säker på att du vill avboka intervju?</h3>
<div>
    <h4>Intervju</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Sökandes e-post
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Applications.Applicant.Email)
        </dd>

        <dt>
            Intervjuarens e-post
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Interviewer.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.InterviewDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.InterviewDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Ta bort" class="btn btn-default" /> |
            @Html.ActionLink("Tillbaka till listan", "Index")
        </div>
    }
</div>
