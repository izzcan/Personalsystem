@model IEnumerable<Personalsystem.Models.Application>

@{
    ViewBag.Title = "Index";
}

<h2>Ansökningar</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Applicant.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vacancy.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Applicant.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vacancy.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
            <a href="/Interviews/Create/@item.Id">Skapa intervju</a>
        </td>
    </tr>
}

</table>
