@model IEnumerable<Personalsystem.Models.Schedule>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { departmentId = ViewBag.DepartmentId, groupId = ViewBag.GroupId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Department.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Group.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @(item.DepartmentId != null ? Html.ActionLink(item.Department.Name, "Index", new { departmentId = item.DepartmentId }):null)
        </td>
        <td>            
            @(item.GroupId != null ? Html.ActionLink(item.Group.Name, "Index", new { groupId = item.GroupId }):null)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartTime)
        </td>
        <td>
            @(item.EndTime != null ? Html.DisplayFor(modelItem => item.EndTime) : Html.Raw("Ongoing"))
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Manage Times", "Index", "ScheduleItems", new { scheduleId=item.Id },null) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Back to Company", "Details", "Departments", new { id = ViewBag.DepartmentId != null ? ViewBag.DepartmentId : ViewBag.GroupId }, null)
</div>