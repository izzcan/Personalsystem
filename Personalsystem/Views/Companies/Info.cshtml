@model Personalsystem.Models.CompanyProfileViewmodel

@{
    ViewBag.Title = "Profile";
}

<h2>@Model.Name</h2>

@*@{string newsClass = Model.NewsItems.Count >= 3 ? "col-md-4" : Model.NewsItems.Count == 2 ? "col-md-6" : "col-md-12"; }*@ 
@{string newsClass = "col-md-4 col-sm-6";}

@Html.ActionLink("Create Newsitem", "Create", "NewsItems", new { Model.Id }, new { @class = "btn btn-default" })<br />
<div class="row">
    @foreach (var item in Model.NewsItems)
    {
        <div class="@newsClass" style="background-color:yellow;">
            <h4>@Html.ActionLink(item.Title, "Details", "NewsItems", new { item.Id }, null)</h4>
            <span>@item.Created - @item.CreatorName</span>
            <p>@item.Content</p>
        </div>
    }
</div>
@Html.ActionLink("Create Department", "Create", "Departments", new { Model.Id }, new { @class = "btn btn-default" })<br />

<ul>
    @foreach (var item in Model.Departments)
    {
        <li style="background-color: pink;">@Html.ActionLink(item.Name, "Details", "Departments", new { item.Id }, null)</li>
    }
</ul>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Delete", "Delete", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<p>
    @Html.ActionLink("Show Employees", "Employees", new { Model.Id }, new { @class = "btn btn-default" })
    @Html.ActionLink("Add Admin", "AddAdmin", new { Model.Id }, new { @class = "btn btn-default" })
</p>
